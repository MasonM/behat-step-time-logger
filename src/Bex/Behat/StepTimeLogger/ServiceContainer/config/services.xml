<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="bex.step_time_logger_extension.output_printer.console" class="Behat\Behat\StepTimeLogger\Service\OutputPrinter\Console" />
        <service id="bex.step_time_logger_extension.output_printer.csv" class="Behat\Behat\StepTimeLogger\Service\OutputPrinter\Csv" />
        <service id="bex.step_time_logger_extension.output_printer.current" class="Behat\Behat\StepTimeLogger\Service\OutputPrinter\Console" />

        <service id="bex.step_time_logger_extension.step_time_logger" class="Behat\Behat\StepTimeLogger\Service\StepTimeLogger">
            
        </service>

        <!-- event listener -->
        <service id="bex.step_time_logger_extension.steptimelogger_listener" class="Bex\Behat\StepTimeLogger\Listener\StepTimeLoggerListener" public="false">
            <tag name="event_dispatcher.subscriber" priority="0"/>
            <argument type="service" id="bex.step_time_logger_extension.step_time_logger" />
            <argument type="service" id="bex.step_time_logger_extension.output_printer.current" />
        </service>
    </services>
</container>
